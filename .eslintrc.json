{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react-hooks/recommended",
    "plugin:react/recommended",
    "airbnb"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "react-hooks"
  ],
  "rules": {
    "react/jsx-filename-extension": [ 1, { "extensions": [".js", ".jsx"] } ],
    "no-empty": ["error", { "allowEmptyCatch": true}],
    "react/react-in-jsx-scope": "off",
    "import/prefer-default-export": "off"
  }
}
